# ============================================
# JudgeFinder Platform - Environment Variables Template
# ============================================
# SECURITY WARNING: Never commit real API keys to version control!
# Copy this file to .env.local and fill in your actual values
# ============================================

# ------------------------------
# Database Configuration
# ------------------------------
# Supabase - Get from: https://app.supabase.com/project/[project-id]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ------------------------------
# Authentication (Clerk)
# ------------------------------
# Get from: https://dashboard.clerk.com/apps/[app-id]/instances
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-secret-here

# Clerk URLs (customize as needed)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/welcome

# ------------------------------
# AI Services
# ------------------------------
# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Google AI (Gemini) - Get from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-gemini-api-key-here

# ------------------------------
# External APIs
# ------------------------------
# CourtListener - Get from: https://www.courtlistener.com/api/
COURTLISTENER_API_KEY=your-courtlistener-key-here

# ------------------------------
# Payment Processing (Stripe)
# ------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-public-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
NEXT_PUBLIC_STRIPE_PRICE_ID=price_your-price-id-here

# ------------------------------
# Email Service
# ------------------------------
# Option 1: SendGrid - Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-key-here

# Option 2: Resend - Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-key-here

# Email configuration
EMAIL_API_KEY=your-email-api-key-here
EMAIL_FROM=noreply@yourdomain.com

# ------------------------------
# Site Configuration
# ------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3005
NEXT_PUBLIC_APP_URL=http://localhost:3005
NEXT_PUBLIC_APP_NAME=JudgeFinder Platform
NODE_ENV=development

# ------------------------------
# Security & Internal Keys
# ------------------------------
# Generate secure random keys using: openssl rand -base64 32
SYNC_API_KEY=generate-secure-random-key-min-32-chars
CRON_SECRET=generate-secure-random-key-min-32-chars
COURTLISTENER_WEBHOOK_SECRET=generate-secure-webhook-secret
COURTLISTENER_WEBHOOK_VERIFY_TOKEN=generate-secure-verify-token
SESSION_SECRET=generate-secure-session-secret-min-64-chars

# ------------------------------
# Rate Limiting (Upstash Redis)
# ------------------------------
# Get from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# ------------------------------
# Error Monitoring (Sentry)
# ------------------------------
# Get from: https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ------------------------------
# Analytics (Optional)
# ------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-YOUR-GA-ID

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Clarity
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-id

# ------------------------------
# Admin Configuration
# ------------------------------
# Comma-separated list of admin user IDs from Clerk
ADMIN_USER_IDS=user_id1,user_id2