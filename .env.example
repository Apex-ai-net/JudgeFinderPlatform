# JudgeFinder Platform - Environment Variables Template
# Copy this file to .env.local and add your actual values
# For Netlify: Add these variables in the Netlify Dashboard > Site Settings > Environment Variables

# =================
# SUPABASE DATABASE
# =================
# Get these from your Supabase project dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# =================
# AUTHENTICATION (CLERK)
# =================
# Get these from your Clerk dashboard > Developers > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...your-publishable-key
CLERK_SECRET_KEY=sk_test_...your-secret-key

# =================
# SITE CONFIGURATION  
# =================
# Production: https://your-domain.com | Development: http://localhost:3005
NEXT_PUBLIC_SITE_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=JudgeFinder Platform
NODE_ENV=production

# =================
# AI SERVICES
# =================
# Google Gemini API (Primary AI)
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# OpenAI API (Fallback AI)
OPENAI_API_KEY=sk-proj-...your-openai-key

# =================
# DATA SOURCES
# =================
# CourtListener API for court data
COURTLISTENER_API_TOKEN=your-courtlistener-api-token

# =================
# CACHE & RATE LIMITING
# =================
# Upstash Redis (Required for production)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =================
# ERROR MONITORING
# =================
# Sentry for error tracking (Recommended for production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =================
# CRON & WEBHOOKS
# =================
# Secure key for cron job authentication
CRON_SECRET=generate-secure-random-key-32-chars

