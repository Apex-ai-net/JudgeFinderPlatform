# JudgeFinder Platform - Environment Variables Template
# Copy this file to .env and .env.local with your actual values

# =================
# SUPABASE DATABASE
# =================
# Get these from your Supabase project dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# =================
# AUTHENTICATION (CLERK)
# =================
# Get these from your Clerk dashboard > Developers > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...your-publishable-key
CLERK_SECRET_KEY=sk_test_...your-secret-key
CLERK_WEBHOOK_SECRET=whsec_...your-webhook-secret

# =================
# SITE CONFIGURATION  
# =================
# Production: https://judgefinder.io | Development: http://localhost:3005
NEXT_PUBLIC_SITE_URL=http://localhost:3005
NEXT_PUBLIC_APP_NAME=JudgeFinder Platform
NODE_ENV=development

# =================
# THIRD-PARTY APIS
# =================
# OpenAI for AI features (optional)
OPENAI_API_KEY=sk-proj-...your-openai-key

# CourtListener API for case data (required)
COURTLISTENER_API_KEY=your-courtlistener-api-key

# =================
# PAYMENTS (STRIPE) - Optional
# =================
# Get these from Stripe dashboard > Developers > API keys
STRIPE_SECRET_KEY=sk_test_...your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_...your-stripe-webhook-secret
NEXT_PUBLIC_STRIPE_PRICE_ID=price_...your-price-id

# =================
# EMAIL SERVICE (SENDGRID)
# =================
# Get API key from SendGrid dashboard
EMAIL_API_KEY=SG....your-sendgrid-api-key
EMAIL_FROM=noreply@judgefinder.io

# =================
# SYNC & WEBHOOKS
# =================
# Custom secure keys for internal API protection
SYNC_API_KEY=generate-secure-random-key-32-chars
CRON_SECRET=generate-secure-random-key-32-chars
COURTLISTENER_WEBHOOK_SECRET=generate-secure-random-key-32-chars
COURTLISTENER_WEBHOOK_VERIFY_TOKEN=generate-secure-random-key-32-chars

# =================
# ANALYTICS & MONITORING
# =================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity (optional)
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-project-id

# Search Engine Verification
GOOGLE_SITE_VERIFICATION=your-google-verification-code
BING_SITE_VERIFICATION=your-bing-verification-code
YANDEX_VERIFICATION=your-yandex-verification-code

# =================
# SECURITY & MONITORING
# =================
# Sentry for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Rate limiting and security
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =================
# DEVELOPMENT ONLY
# =================
# Database migration and development tools
DATABASE_URL=postgresql://user:pass@localhost:5432/judgefinder_dev
DIRECT_URL=postgresql://user:pass@localhost:5432/judgefinder_dev