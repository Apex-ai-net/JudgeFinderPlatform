# ============================================
# JudgeFinder Platform - Environment Variables
# ============================================
# Copy this to .env.local for local development
# All production values are configured in Netlify
# ============================================

# ------------------------------
# Database Configuration (Supabase)
# ------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ------------------------------
# Authentication (Clerk)
# ------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key-here
CLERK_SECRET_KEY=sk_test_your-secret-here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/register

# ------------------------------
# AI Services
# ------------------------------
OPENAI_API_KEY=sk-proj-your-openai-key-here
GOOGLE_AI_API_KEY=your-gemini-api-key-here

# ------------------------------
# External APIs
# ------------------------------
COURTLISTENER_API_KEY=your-courtlistener-key-here

# ------------------------------
# Analytics (Optional)
# ------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-YOUR-GA-ID
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ------------------------------
# Site Configuration
# ------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3005
NEXT_PUBLIC_APP_NAME=JudgeFinder
NODE_ENV=development

# ------------------------------
# Admin Configuration
# ------------------------------
ADMIN_USER_IDS=user_id1,user_id2

# ------------------------------
# Internal Security
# ------------------------------
SYNC_API_KEY=generate-secure-random-key-min-32-chars
CRON_SECRET=generate-secure-random-key-min-32-chars